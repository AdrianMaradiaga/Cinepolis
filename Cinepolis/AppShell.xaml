<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Cinepolis.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Cinepolis"
    xmlns:views="clr-namespace:Cinepolis.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Home"
             Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:Home}" />
        </Tab>
        <Tab Title="Movies"
             Icon="movies.png">
            <ShellContent ContentTemplate="{DataTemplate views:MoviesPage}" />
        </Tab>
        <Tab Title="Snacks"
             Icon="food.png">
            <ShellContent ContentTemplate="{DataTemplate views:SnacksPage}" />
        </Tab>
    </TabBar>
    
  
</Shell>
