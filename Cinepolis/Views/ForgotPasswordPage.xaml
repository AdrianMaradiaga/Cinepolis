<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinepolis.Views.ForgotPasswordPage"
             Title="Restablecer contraseña">
    <StackLayout Margin="20, 96, 20, 40">
        <Image Source="cinepolis_logo.png"
               Aspect="AspectFill" />
        <Label Text="¿Has olvidado tu contraseña?"
               FontFamily="GilroySemiBold"
               FontSize="16"/>
        <Entry x:Name="EmailEntry"
               Placeholder="Introduce tu dirección de correo electrónico"
               Keyboard="Email"/>
        <Button Text="Restablecer contraseña"
                Margin="0,15,0,0"
                Clicked="ResetPasswordButton_Clicked" />
    </StackLayout>
</ContentPage>